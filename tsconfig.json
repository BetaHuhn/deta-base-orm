{
  "compilerOptions": {
    "outDir": "./lib",
    "module": "ES2020",
    "lib": ["es2020", "DOM"],
    "target": "es6",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": [
    "./src/*.ts",
    "./src/**/*.ts"
  ],
  "exclude": ["node_modules/", "dist/"]
}